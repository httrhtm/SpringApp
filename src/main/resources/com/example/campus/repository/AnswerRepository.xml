<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
	"-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace：mapperインターフェースのパッケージ付きクラス名を指定 -->
<mapper namespace="com.example.campus.repository.AnswerRepository">
	<!-- 全件取得 -->
	<select id="findAll" resultType="com.example.campus.entity.Answers">
		select * from correct_answers
	</select>

	<!-- レコードの新規作成 -->
	<select id="create" resultType="com.example.campus.entity.Answers">
		insert into answers (questions_id, answer, created_at, updated_at) values (?, ?, current_timestamp(), current_timestamp())
	</select>
</mapper>